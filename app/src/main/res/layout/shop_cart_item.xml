<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dis_170"
    android:background="@drawable/back_round_white_30"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dis_12"
        android:src="@drawable/ic_pay_normal" />

    <cn.dogplanet.app.widget.RoundCornerImageView
        android:id="@+id/img_product"
        android:layout_width="@dimen/dis_180"
        android:layout_height="@dimen/dis_120"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dis_12"
        android:layout_toEndOf="@id/img_choose" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="@dimen/dis_50"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/font_size_15"
        android:textColor="@color/color_33"
        android:layout_marginEnd="@dimen/dis_48"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_product"
        android:layout_marginTop="@dimen/dis_24"
        android:layout_toEndOf="@+id/img_product"
        android:layout_toStartOf="@id/tv_price"
        android:layout_marginStart="@dimen/dis_24"
        android:layout_marginEnd="@dimen/dis_50"
        android:textColor="@color/color_8e"
        android:textSize="@dimen/font_size_13"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="@dimen/dis_20"
        android:layout_toEndOf="@+id/img_product"
        android:layout_marginStart="@dimen/dis_24"
        android:textColor="@color/color_8e"
        android:textSize="@dimen/font_size_13"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="@dimen/dis_20"
        android:layout_marginStart="@dimen/dis_40"
        android:layout_marginEnd="@dimen/dis_50"
        android:layout_toEndOf="@+id/tv_num"
        android:textColor="@color/color_8e"
        android:textSize="@dimen/font_size_13"
        android:layout_toStartOf="@id/tv_price" />

</RelativeLayout>