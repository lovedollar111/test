<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6c000000"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_invite_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dis_60"
            android:layout_marginTop="@dimen/dis_10"
            android:gravity="center"
            android:textColor="#282c36"
            android:textSize="@dimen/font_size_16"
            android:layout_above="@id/tv_hint"
            android:layout_marginBottom="@dimen/dis_40"/>


        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dis_50"
            android:layout_above="@+id/share_gridview"
            android:gravity="center"
            android:paddingBottom="@dimen/dis_10"
            android:text="分享产品至"
            android:textColor="#282c36"
            android:textSize="@dimen/font_size_14" />

        <GridView
            android:id="@+id/share_gridview"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginBottom="@dimen/dis_40"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:listSelector="@android:color/transparent"
            android:numColumns="5"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:layout_above="@+id/view_back"/>

        <View
            android:id="@+id/view_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dis_40"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</RelativeLayout>