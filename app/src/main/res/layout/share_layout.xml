<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6c000000"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/white">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dis_30"
            android:paddingBottom="@dimen/dis_15"
            android:textSize="@dimen/font_size_14"
            android:textColor="#282c36"
            android:text="分享至"
            android:gravity="center"
            android:layout_above="@+id/view_line"
            />

        <View
            android:id="@+id/view_line"
            style="@style/view_hor_margin_20_line"
            android:layout_above="@+id/share_gridview"
            android:background="#DFE1E1"
            />

        <GridView
            android:id="@+id/share_gridview"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_above="@+id/lay_hint"
            android:listSelector="@android:color/transparent"
            android:background="@color/white"
            android:numColumns="5"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:layout_centerHorizontal="true"
            />

        <LinearLayout
            android:id="@+id/lay_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dis_60"
            android:paddingTop="@dimen/dis_50">

            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_weight="1"
                android:background="#DFE1E1"
                android:layout_marginLeft="@dimen/dis_20"
                android:layout_marginRight="@dimen/dis_20"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享越多，订单越火爆"
                android:textSize="@dimen/font_size_11"
                android:textColor="#777C88"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_weight="1"
                android:background="#DFE1E1"
                android:layout_marginLeft="@dimen/dis_20"
                android:layout_marginRight="@dimen/dis_20"
                />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>