<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back_round_white">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dis_40"
        android:layout_marginRight="@dimen/dis_40"
        android:layout_marginTop="@dimen/dis_40"
        android:gravity="center"
        android:text="请输入图中验证码"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_18" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_graphic_code"
            android:layout_width="80dp"
            android:layout_height="@dimen/dis_80"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dis_30"
            android:layout_marginBottom="@dimen/dis_30"
            android:scaleType="fitCenter" />


        <ImageView
            android:id="@+id/btn_change"
            android:layout_width="@dimen/dis_180"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dis_20"
            android:paddingRight="@dimen/dis_40"
            android:layout_toRightOf="@id/img_graphic_code"
            android:textSize="@dimen/font_size_14"
            android:scaleType="fitCenter"
            android:src="@mipmap/change_one_normal"/>


    </RelativeLayout>


    <EditText
        android:id="@+id/et_graphic_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dis_20"
        android:layout_marginLeft="@dimen/dis_70"
        android:layout_marginRight="@dimen/dis_70"
        android:layout_marginTop="@dimen/dis_20"
        android:background="@drawable/edit_back"
        android:gravity="center"
        android:hint="不区分大小写"
        android:inputType="number"
        android:padding="@dimen/dis_20"
        android:textColorHint="@color/color_e0"
        android:textSize="@dimen/font_size_18" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dis_50"
        android:background="#dadada" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/back_round_white">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/back_round_white"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/title_bg"
            android:textSize="@dimen/font_size_11" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#dadada" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/back_round_white"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/title_bg"
            android:textSize="@dimen/font_size_15" />
    </LinearLayout>
</LinearLayout>