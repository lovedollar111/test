<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.login.CardInfoActivity">



    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_33"
        android:text="@string/register_3"
        android:textSize="@dimen/font_size_26"
        android:layout_marginStart="@dimen/dis_60"
        android:layout_marginTop="@dimen/dis_75"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/lay_step"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis_100"
                android:layout_marginTop="@dimen/dis_30"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_step_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/set_password"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dis_60"
                    android:textSize="@dimen/font_size_11"
                    android:textColor="@color/color_f13051"/>

                <ImageView
                    android:id="@+id/img_step_1"
                    android:layout_width="@dimen/dis_30"
                    android:layout_height="@dimen/dis_30"
                    android:src="@mipmap/one_select"
                    android:layout_alignEnd="@+id/tv_step_1"
                    android:layout_alignStart="@+id/tv_step_1"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dis_20"
                    />

                <TextView
                    android:id="@+id/tv_step_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/set_info"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dis_36"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/font_size_11"
                    android:textColor="@color/color_f13051"/>

                <ImageView
                    android:id="@+id/img_step_2"
                    android:layout_width="@dimen/dis_30"
                    android:layout_height="@dimen/dis_30"
                    android:src="@mipmap/two_select"
                    android:layout_centerVertical="true"
                    android:layout_alignEnd="@+id/tv_step_2"
                    android:layout_alignStart="@+id/tv_step_2"
                    android:layout_marginBottom="@dimen/dis_20"
                    />

                <TextView
                    android:id="@+id/tv_step_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/set_img"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dis_36"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dis_60"
                    android:textSize="@dimen/font_size_11"
                    android:textColor="@color/color_f13051"/>

                <ImageView
                    android:id="@+id/img_step_3"
                    android:layout_width="@dimen/dis_30"
                    android:layout_height="@dimen/dis_30"
                    android:src="@mipmap/three_select"
                    android:layout_centerVertical="true"
                    android:layout_alignEnd="@+id/tv_step_3"
                    android:layout_alignStart="@+id/tv_step_3"
                    android:layout_marginBottom="@dimen/dis_20"
                    />

                <View
                    style="@style/view_hor_match_line"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/tv_step_1"
                    android:layout_toStartOf="@+id/img_step_2"
                    android:background="@color/color_f13051" />

                <View
                    style="@style/view_hor_match_line"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/tv_step_2"
                    android:layout_toStartOf="@+id/img_step_3"
                    android:background="@color/color_f13051" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/lay_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/lay_step"
                android:layout_marginTop="@dimen/dis_100">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="@dimen/dis_30"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/shili" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dis_20"
                    android:layout_marginEnd="@dimen/dis_30">

                    <TextView
                        android:id="@+id/tv_img_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上传证件参考事例："
                        android:textColor="@color/color_33"
                        android:textSize="@dimen/font_size_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_img_hint"
                        android:layout_marginTop="@dimen/dis_20"
                        android:text="手持证件照拍摄之后上传，\n要五官清晰，\n不要遮挡。"
                        android:textColor="@color/color_8e"
                        android:textSize="@dimen/font_size_11" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_img_id_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/lay_hint">

                <cn.dogplanet.app.widget.RoundCornerImageView
                    android:id="@+id/img_left_card"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:visibility="visible"
                    android:background="@mipmap/img_back"
                    android:layout_marginStart="@dimen/dis_30"/>

                <cn.dogplanet.app.widget.RoundCornerImageView
                    android:id="@+id/img_right_card"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:visibility="visible"
                    android:background="@mipmap/img_back"
                    android:layout_marginEnd="@dimen/dis_30"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_tv_id_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_below="@+id/lay_img_id_card"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dis_20"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/str_id_card_left"
                    android:textColor="@color/color_8e"
                    android:textSize="@dimen/font_size_12" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dis_20"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/str_id_card_right"
                    android:textColor="@color/color_8e"
                    android:textSize="@dimen/font_size_12" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_img_driver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/lay_tv_id_card">

                <cn.dogplanet.app.widget.RoundCornerImageView
                    android:id="@+id/img_driver"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:background="@mipmap/img_back"
                    android:visibility="visible"
                    android:layout_marginStart="@dimen/dis_30"/>

                <cn.dogplanet.app.widget.RoundCornerImageView
                    android:id="@+id/img_vehicle"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:background="@mipmap/img_back"
                    android:scaleType="centerCrop"
                    android:visibility="visible"
                    android:layout_marginEnd="@dimen/dis_30"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_tv_driver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_below="@+id/lay_img_driver"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dis_20"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/str_driver"
                    android:textColor="@color/color_8e"
                    android:textSize="@dimen/font_size_12" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dis_20"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/str_vehicle"
                    android:textColor="@color/color_8e"
                    android:textSize="@dimen/font_size_12" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/lay_img_operational"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/lay_tv_driver">

                <cn.dogplanet.app.widget.RoundCornerImageView
                    android:id="@+id/img_operational"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:background="@mipmap/img_back"
                    android:visibility="visible"
                    android:layout_marginStart="@dimen/dis_30"/>

                <cn.dogplanet.app.widget.RoundCornerImageView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:visibility="invisible"
                    android:layout_marginEnd="@dimen/dis_30"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_tv_operational"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_below="@+id/lay_img_operational"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dis_20"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/str_operational"
                    android:textColor="@color/color_8e"
                    android:textSize="@dimen/font_size_12" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dis_20"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/str_id_card_right"
                    android:textColor="@color/color_8e"
                    android:textSize="@dimen/font_size_12"
                    android:visibility="invisible"/>

            </LinearLayout>


            <Button
                android:id="@+id/btn_reg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis_80"
                android:layout_marginStart="@dimen/dis_60"
                android:layout_marginEnd="@dimen/dis_60"
                android:layout_below="@id/lay_tv_operational"
                android:layout_marginTop="@dimen/dis_60"
                android:background="@drawable/gradient_c7_ab"
                android:text="@string/next"
                android:textColor="@color/white"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis_40"
                android:layout_below="@id/btn_reg"/>

        </RelativeLayout>

    </ScrollView>


</LinearLayout>