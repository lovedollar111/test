<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/toast_back"
    android:layout_marginLeft="@dimen/dis_20"
    android:layout_marginRight="@dimen/dis_20"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dis_20" >

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tip_pass"
        android:textColor="@color/white"
        android:layout_gravity="bottom"
        android:paddingLeft="@dimen/dis_40"
        android:paddingRight="@dimen/dis_40"
        android:gravity="center"
        android:textSize="14sp" />

</LinearLayout>