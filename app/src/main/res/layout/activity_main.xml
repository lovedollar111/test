<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lay_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dis_20"
            android:paddingBottom="@dimen/dis_10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center" >

                <Button
                    android:id="@+id/btn_home"
                    style="@style/main_btn_style"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:drawableTop="@mipmap/ic_launcher"
                    android:text="@string/main_home" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <Button
                        android:id="@+id/btn_order"
                        style="@style/main_btn_style"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:drawableTop="@mipmap/ic_launcher"
                        android:paddingRight="@dimen/dis_8"
                        android:text="@string/main_order" />

                    <cn.dogplanet.app.widget.CircleTextView
                        android:id="@+id/tv_bage"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignRight="@+id/btn_order"
                        android:layout_alignTop="@+id/btn_order"
                        android:layout_marginLeft="1.5dp"
                        android:visibility="invisible"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center" >

                <Button
                    android:id="@+id/btn_user"
                    style="@style/main_btn_style"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:drawableTop="@mipmap/ic_launcher"
                    android:text="@string/main_user" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>