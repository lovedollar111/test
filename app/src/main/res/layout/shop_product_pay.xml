<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6c000000"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/dis_60"
            android:layout_height="@dimen/dis_60"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dis_30"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_cancel"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dis_100"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/string_choose_pay" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis_60">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/dis_36"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/string_total_pay_money" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="@dimen/dis_36"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end" />
            </LinearLayout>

            <View style="@style/view_hor_margin_line" />

            <LinearLayout
                android:id="@+id/lay_wx"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis_80">

                <ImageView
                    android:layout_width="@dimen/dis_15"
                    android:layout_height="@dimen/dis_15"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dis_36"
                    android:gravity="center_vertical|end"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dis_10"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/string_pay_wx" />

                <ImageView
                    android:id="@+id/img_wx"
                    android:layout_width="@dimen/dis_15"
                    android:layout_height="@dimen/dis_15"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dis_36"
                    android:gravity="center_vertical|end"
                    android:src="@mipmap/ic_launcher" />
            </LinearLayout>

            <View style="@style/view_hor_margin_line" />

            <LinearLayout
                android:id="@+id/lay_zfb"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis_80">

                <ImageView
                    android:layout_width="@dimen/dis_15"
                    android:layout_height="@dimen/dis_15"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dis_36"
                    android:gravity="center_vertical|end"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dis_10"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/string_pay_zfb" />

                <ImageView
                    android:id="@+id/img_zfb"
                    android:layout_width="@dimen/dis_15"
                    android:layout_height="@dimen/dis_15"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dis_36"
                    android:gravity="center_vertical|end"
                    android:src="@mipmap/ic_launcher" />
            </LinearLayout>

            <View style="@style/view_hor_margin_line" />

            <Button
                android:id="@+id/btn_pay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis_70"
                android:background="@drawable/gradient_c7_ab"
                android:layout_marginStart="@dimen/dis_100"
                android:layout_marginEnd="@dimen/dis_100"
                android:layout_marginTop="@dimen/dis_30"
                android:text="@string/string_pay_ok"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/white"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis_40"/>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>