<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout style="@style/top_title_style" >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#0000"
            android:paddingRight="@dimen/dis_20"
            android:src="@mipmap/icon_back" />

        <TextView
            android:id="@+id/title"
            style="@style/top_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/shop_cart_title" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:background="@color/color_f5">

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/color_f5"
            android:cacheColorHint="@color/color_f5"
            android:clipToPadding="false"
            android:divider="@color/color_f5"
            android:dividerHeight="@dimen/dis_20"
            android:gravity="center_horizontal"
            android:paddingBottom="60dp"
            android:paddingTop="@dimen/dis_10"
            android:scrollbars="none"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/dis_40"
            android:drawableTop="@mipmap/car"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dis_20"
            android:paddingRight="@dimen/dis_20"
            android:text="购物车是空的，再逛逛吧～～"
            android:textColor="#9b9b9b"
            android:textSize="@dimen/font_size_12"
            android:visibility="gone" />


        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/lay_shadow"
            android:layout_above="@+id/lay_btm"/>


        <RelativeLayout
            android:id="@+id/lay_btm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dis_100"
            android:layout_alignParentBottom="true" >

            <LinearLayout
                android:id="@+id/lay_bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis_100"
                android:background="@drawable/more_drdrawable"
                android:orientation="horizontal"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_all"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dis_20"
                        android:text="支付金额 ¥"
                        android:textSize="@dimen/font_size_14"
                        android:textColor="@color/txt_selected_color" />

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="@color/txt_selected_color"
                        android:textSize="@dimen/font_size_14" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_cart_pay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_pay_se"
                    android:text="立即结算"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_15" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>