<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dis_50"
        android:layout_marginBottom="@dimen/dis_10"
        android:layout_marginTop="@dimen/dis_30"
        android:gravity="center"
        android:text="支付结果"
        android:textColor="#282b36"
        android:textSize="@dimen/font_size_18" />

    <TextView
        android:id="@+id/msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dis_10"
        android:gravity="center"
        android:padding="@dimen/dis_20"
        android:text="是否确认退款"
        android:textColor="#282b36"
        android:textSize="@dimen/font_size_14" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >


        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="@dimen/dis_88"
            android:layout_weight="1"
            android:background="@drawable/gradient_f1_e0"
            android:layout_marginStart="@dimen/dis_40"
            android:layout_marginEnd="@dimen/dis_40"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_12" />
    </LinearLayout>

</LinearLayout>