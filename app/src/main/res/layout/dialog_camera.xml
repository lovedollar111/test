<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/back_gary"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dis_2"
            android:background="@color/color_e0"/>

        <Button
            android:id="@+id/btn_camera"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dis_80"
            android:background="@color/white"
            android:text="拍照" />

        <Button
            android:id="@+id/btn_album"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dis_80"
            android:layout_marginTop="@dimen/dis_2"
            android:background="@color/white"
            android:text="从手机相册选择" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dis_90"
            android:layout_marginTop="@dimen/dis_20"
            android:background="@color/white"
            android:text="@string/app_cancel"
            android:textColor="@color/black" />
    </LinearLayout>

</RelativeLayout>