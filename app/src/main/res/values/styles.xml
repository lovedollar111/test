        <item name="android:textSize">@dimen/font_size_10</item>
        <item name="android:drawablePadding">@dimen/dis_8</item>
    </style>

    <!-- 顶部标题栏  TextView -->
    <style name="top_title_text">
        <item name="android:textColor">@color/color_33</item>
        <item name="android:textSize">@dimen/main_title_text_size</item>
