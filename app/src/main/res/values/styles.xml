<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
    -->

    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- 自己写的的style 风格，加了个图片 -->
    <style name="AppThemeDrawable" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/splash</item>
    </style>

    <style name="dialog_transparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="date_pick_dialog_transparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:theme">@android:style/Theme.Light</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="anim_popup_dir">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <!-- 自定义加载Dialog -->
    <style name="Custom_Progress" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 输入框样式 -->
    <style name="lay_ct_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dis_100</item>
        <item name="android:paddingLeft">@dimen/login_padding_left</item>
        <item name="android:paddingRight">@dimen/login_padding_right</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="tv_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_12</item>
    </style>

    <style name="ProjectDialogTheme" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowNoTitle">true</item><!-- Activity无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!-- dialog外无背景-->
        <item name="android:windowCloseOnTouchOutside">false</item><!-- dialog外点击无效果-->
    </style>

    <!-- 文字button -->
    <style name="btn_tv_style">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_15</item>
    </style>

    <style name="tv_15_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_15</item>
    </style>

    <style name="lay_ct_text_input">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">@dimen/font_size_17</item>
    </style>

    <!-- 横线样式 -->
    <style name="view_hor_match_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:background">@color/line_color</item>
    </style>

    <!-- 左边距(10dp)20px -->
    <style name="view_hor_margin_20_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:background">@color/line_color</item>
        <item name="android:layout_marginLeft">@dimen/dis_20</item>
    </style>

    <!-- 左边距(15dp)30px -->
    <style name="view_hor_margin_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:background">@color/color_e5</item>
        <item name="android:layout_marginLeft">@dimen/dis_30</item>
    </style>

    <!-- 左边距(30dp)60px -->
    <style name="view_hor_margin_60_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:background">@color/line_color</item>
        <item name="android:layout_marginLeft">@dimen/dis_60</item>
    </style>

    <!-- 左边距 和右边距为(15dp)30px -->
    <style name="view_hor_margin_all_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:background">@color/line_color</item>
        <item name="android:layout_marginLeft">@dimen/login_padding_left</item>
        <item name="android:layout_marginRight">@dimen/login_padding_right</item>
    </style>

    <!-- 垂直线条 -->
    <style name="view_ver_match_line">
        <item name="android:layout_width">@dimen/line_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/txt_selected_color</item>
    </style>

    <!-- 注册、登录 按钮样式 -->
    <style name="button_height_80">
